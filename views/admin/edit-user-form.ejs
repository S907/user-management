                                        <option value="User" <%= response.role === 'User' ? 'selected' : '' %> >User</option>
                                        
                                      </select>
                                </div> -->

                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail" name="email"
                                        placeholder="Email Address" value="<%=response.email%>">
                                </div>
                               

                                
                               
                                
                                <input type="text" name="id" value="<%= response._id %>">
                                    <input type="submit" value="Submit Details" class="btn btn-primary btn-user btn-block">
                                <hr>
                               
                            </form>
